<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SmartCommander.Views.OptionsWindow"
		    WindowStartupLocation="CenterOwner"
        Title="Options">
  <TabControl>
    <TabItem Header="Window">
      <StackPanel>
        <CheckBox IsChecked="{Binding IsCurrentDirectoryDisplayed}">Display Current Directory</CheckBox>
        <CheckBox IsChecked="{Binding IsFunctionKeysDisplayed}">Display Function Keys</CheckBox>
        <CheckBox IsChecked="{Binding IsCommandLineDisplayed}">Display Command Line</CheckBox>
      </StackPanel>
    </TabItem>    
    <TabItem Header="Operation">
      <StackPanel>
        <CheckBox IsChecked="{Binding IsHiddenSystemFilesDisplayed}">Show Hidden/System Files</CheckBox>
        <CheckBox IsChecked="{Binding SaveSettingsOnExit}">Save Settings on Exit</CheckBox>
        <CheckBox IsChecked="{Binding ConfirmationWhenDeleteNonEmpty}">Show Confirmation when Deleting Non-empty Directory</CheckBox>
      </StackPanel>
    </TabItem>
  </TabControl>
</Window>
