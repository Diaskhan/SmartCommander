<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SmartCommander.FileSearchWindow"
        Title="FileSearchWindow">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="30"/>
		</Grid.RowDefinitions>

		<StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10">
			<TextBox Text="{Binding FileMask, Mode=TwoWay}" Watermark="File Name (e.g. *.txt)"/>
			<TextBox Text="{Binding CurrentFolder, Mode=TwoWay}" Watermark="Current Folder" />
			<Button Content="Start Search" Command="{Binding StartSearchCommand}" IsEnabled="{Binding !IsSearching}"/>
			<Button Content="Cancel" Command="{Binding CancelSearchCommand}" Margin="10,0,0,0" IsEnabled="{Binding IsSearching}"/>
		</StackPanel>


		<ScrollViewer VerticalScrollBarVisibility="Visible"  Grid.Row="1" Margin="10">
			<ListBox ItemsSource="{Binding SearchResults}" Margin="0,10,0,0"/>
		</ScrollViewer>

		<Border Grid.Row="2" Background="Azure" Padding="5" HorizontalAlignment="Stretch">
			<TextBlock  Text="{Binding StatusFolder, Mode=TwoWay}" VerticalAlignment="Center"/>
		</Border>
	</Grid>
</Window>
