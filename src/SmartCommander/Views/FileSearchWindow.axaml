<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SmartCommander.FileSearchWindow"
        Title="FileSearchWindow">
	<StackPanel Margin="10">
		<!-- Поле для ввода текущей папки -->
		<TextBox Text="{Binding CurrentFolder, Mode=TwoWay}" Watermark="Current Folder" />

		<!-- Поле для ввода названия файла с поддержкой масок -->
		<TextBox Text="{Binding FileMask, Mode=TwoWay}" Watermark="File Name (e.g. *.txt)"/>

		<!-- Кнопки отмены и начала поиска -->
		<StackPanel Orientation="Horizontal" Margin="0,10,0,0">
			<Button Content="Start Search" Command="{Binding StartSearchCommand}" IsEnabled="{Binding !IsSearching}"/>
			<Button Content="Cancel" Command="{Binding CancelSearchCommand}" Margin="10,0,0,0" IsEnabled="{Binding IsSearching}"/>
		</StackPanel>

		<!-- Список результатов поиска -->
		<ListBox ItemsSource="{Binding SearchResults}" Margin="0,10,0,0"/>
	</StackPanel>
</Window>
